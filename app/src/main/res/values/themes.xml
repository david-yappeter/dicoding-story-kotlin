<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeLight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Android Base Theme-->
        <item name="background">@color/white</item>
        <item name="android:statusBarColor">@color/yellow_orange</item>
        <item name="android:textColor">@color/black</item>

        <!-- material 3 theme -->
        <item name="colorPrimary">@color/princeton_orange</item>
        <item name="colorSecondary">@color/yellow_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!--<item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
    </style>

    <style name="AppThemeDark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- android base theme -->
        <item name="background">@color/arsenic</item>
        <item name="android:statusBarColor">@color/yellow_orange</item>
        <item name="android:textColor">@color/white</item>

        <!-- material 3 theme -->
        <item name="colorPrimary">@color/princeton_orange</item>
        <item name="colorSecondary">@color/yellow_orange</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!--<item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
    </style>

    <!-- text appearance -->
    <style name="SwitchTitle" parent="TextAppearance.AppCompat.Widget.Switch"></style>

    <style name="Title1" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- button style -->
    <style name="FacebookButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/facebook_blue</item>
        <item name="android:textColor">@color/facebook_blue</item>
        <item name="iconTint">@color/facebook_blue</item>
    </style>

    <style name="GoogleButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/google_red</item>
        <item name="android:textColor">@color/google_red</item>
        <item name="iconTint">@color/google_red</item>
    </style>

