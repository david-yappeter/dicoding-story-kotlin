<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppThemeLight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Android Base Theme-->
        <item name="background">@color/white</item>
        <item name="android:statusBarColor">@color/yellow_orange</item>
        <item name="android:textColor">@color/black</item>

        <!-- material 3 theme -->
        <item name="colorPrimary">@color/princeton_orange</item>
        <item name="colorSecondary">@color/yellow_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!--<item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
    </style>

    <style name="AppThemeDark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- android base theme -->
        <item name="background">@color/arsenic</item>
        <item name="android:statusBarColor">@color/yellow_orange</item>
        <item name="android:textColor">@color/white</item>

        <!-- material 3 theme -->
        <item name="colorPrimary">@color/princeton_orange</item>
        <item name="colorSecondary">@color/yellow_orange</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!--<item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
    </style>

    <!-- text appearance -->
    <style name="Title2" parent="TextAppearance.AppCompat.Widget.Switch">
    </style>

    <!-- fade in/out animation  -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>